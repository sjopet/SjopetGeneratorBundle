{% extends "TwigBundle::layout.html.twig" %}

{% block head %}
    <link rel="stylesheet" href="{{ asset('bundles/sjopetsoapclientgenerator/css/style.css') }}" />
{% endblock %}

{% block title 'Sjopet-Generator' %}

{% block body %}
    {% for flashMessage in app.session.flashbag.get('notice') %}
        <div class="flash-message">
            <em>Notice</em>: {{ flashMessage }}
        </div>
    {% endfor %}

    {% block content_header %}
        <ul id="menu">
            {% block content_header_more %}
                <li><a href="{{ path('sjopet_generate_bundle') }}">Home</a></li>
            {% endblock %}
        </ul>

        <div style="clear: both"></div>
    {% endblock %}

    <div class="block">
        {% block content %}
            <h1>Sjopet Generator</h1><hr /><br>
            <p>Use the form to create a bundle.</p>
            <br>
            <form method="post" {{ form_enctype(form) }} novalidate="novalidate" class="form-rows">
                {{ form_errors(form) }}

                {{ form_row(form.name) }}
                {{ form_row(form.namespace) }}
                {{ form_row(form.path) }}
                {{ form_row(form.configType) }}

                {{ form_rest(form) }}
                <div>
                    <span class="submit">
                        <input type="submit" />
                    </span>
                </div>
            </form>
        {% endblock %}
    </div>

{% endblock %}
